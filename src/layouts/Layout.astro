---
import { siteConfig } from "../config";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteConfig.about} />
    <title>{title}</title>
    <link rel="stylesheet" href="/style/global.css" />
    <link rel="shortcut icon" href={siteConfig.logo} type="image/x-icon" />
    <style
      define:vars={{
        lightBackground: `url(${siteConfig.background.light})`,
        darkBackground: `url(${siteConfig.background.dark})`,
      }}
    >
      body:before {
        content: "";
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        z-index: -1;
        background-image: var(--lightBackground);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        opacity: 0.8;
      }
      /* 媒体查询 dark 模式 */
      @media (prefers-color-scheme: dark) {
        body:before {
          background-color: #000;
          background-image: var(--darkBackground);
        }
      }
    </style>
  </head>
  <body class="dark:text-white">
    <main class="md:w-[600px] mt-28 p-5 lg:ml-20 min-h-screen">
      <slot />
    </main>

    <script>
      import { createIcons, icons } from "lucide";
      createIcons({ icons });
    </script>
  </body>
</html>
